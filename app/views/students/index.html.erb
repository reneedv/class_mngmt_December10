<h1>All Students</h1>

<table>
  <thead>
    <tr>
      <th>Full name</th>
<!--       <th>Bio</th>
      <th>Age</th> -->
      <th>Title</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= link_to student.full_name, student %></td>
<!--         <td><%# shorten_bio student.bio %></td>
        <td><%# student.age %></td> -->
        <td><%= student.title %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

